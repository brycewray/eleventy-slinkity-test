---
title: BryceWray.com
layout: base
---

<main>

  <div class="container-home">
    <div class="homeOpen">
      <h1>Home page</h1>
      <p>This sentence comes from the template.</p>
      <div>{{ content | safe }}</div>
    </div>
    <div class="homePost-Div">
      <div class="post-line"></div>
      <h2 class="homePost-Latest">Latest <a href="/posts/">posts</a></h2>
      {% for post in collections.post | reverse %}
        {% if loop.index0 < 3 %}
        <div>
          <h2 class="homePost-Title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
          <p class="homePost-Subtitle">{{ post.data.subtitle }}</p>
          <p class="homePost-Dates">
            <time datetime="{{ post.date | htmlDateString }}"><strong>{{ post.date | htmlDateString }}</strong></time>
            {% if post.data.lastmod %}
            <br />Last modified <time datetime="{{ post.date | htmlDateString }}">{{ post.data.lastmod | htmlDateString }}</time>
            {% endif %}
          </p>
          <p class="homePost-Description">
            {{ post.data.description }}
          </p>
        </div>
        {% endif %}
      {% endfor %}
      <p class="margin-top: 2em;"><a href="/posts/"><strong>All {{ collections.post.length }} posts</strong></a> <span class="pokey"><em>(listed five per page)</em></span></p>
      <!-- Twitter timeline used to go here -->
    </div>
  </div>
</main>