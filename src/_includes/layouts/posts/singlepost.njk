---
title: singlepost.njk
layout: base
---

<main>

  {% include 'layouts/partials/billboard.njk' %}

  <div class="post-line"></div>

  <div class="container-narrower">
    <article class="article">
      {{ content | safe }}
    </article>
  </div>

  {% if page.url !== "/about/" %}

  <div class="bg-dark">
    <h3 class="ctr wht prevnextH3"><em><a href="/posts">Other posts</a></em></h3>
  {% if nextPost.url %}
    <p class="ctr prevnextP">
      <strong>Next</strong>: 
      <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </p>
  {% endif %}
  {% if prevPost.url %}
    <p class="ctr prevnextP">
      <strong>Previous</strong>: 
      <a class="next" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
    </p>
  {% endif %}
  </div>
  {% endif %}
  
</main>